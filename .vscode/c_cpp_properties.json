{
    "configurations": [
        {
            "name": "ESP32",
            "includePath": [
                "${workspaceRoot}/**",
                "${workspaceRoot}/components/**",
                "${workspaceRoot}/build/**",
                "${workspaceRoot}/build/include/**",
                "${env:IDF_PATH}/components/**"
            ],
            "intelliSenseMode": "clang-x64",
            "browse": {
                "path": [
                    "${workspaceRoot}/**",
                    "${workspaceRoot}/components/**",
                    "${workspaceRoot}/build/**",
                    "${workspaceRoot}/build/include/**",
                    "${env:IDF_PATH}/components/**"
                    ],
                "limitSymbolsToIncludedHeaders": true
            },
            "cStandard": "c11",
            "cppStandard": "c++17"
        }
    ],
    "version": 4
}
